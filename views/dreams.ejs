<!-- Basic skeleton generated by Emmet Abbreviation "!" in VS Code -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Dreams</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

     <!-- Materialize JavaScript -->
     <script src="javascripts/materialize.min.js"></script>

     <!-- Auto-initialize Materialize elements-->
     <script src="/scripts/materializeAutoInit.js"></script>

    <!-- Stylesheet-->
     <link rel="stylesheet" href="/stylesheets/dreamStyle.css">


</head>

<body class="deep-purple lighten-5">

    <!-- Nav bar -->
    <header>
        <nav>
            <div class="nav-wrapper deep-purple lighten-3">
                <a href="/" class="brand-logo center"><i class="material-icons left">cloud_circle</i>Your Dreams<i class="material-icons right">cloud_circle</i></a> <!-- cap icon appears next to nav bar-->
                <a href="/" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul class="right">
                    <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
                    <li><a href="/dreams"><i class="material-icons left">cloud</i> Journal</a></li>
                </ul>
            </div>
        </nav>
    </header>


    <!-- Actual page content! -->
    <div class="container">
        <h1>Your Dreams:</h1>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Title</th>
                    <th>Type</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < dreamlist.length; i++) { %>
                <tr>
                    <td><%= dreamlist[i].dateFormatted %></td>
                    <td><%= dreamlist[i].title %></td>
                    <td><%= dreamlist[i].typeName %></td>
                    <td>
                        <a class="deep-purple lighten-3 waves-effect waves-light btn-floating" href="/dreams/<%= dreamlist[i].dreamId %>"><i class="material-icons">info</i></a>
                    </td>
                    <td>
                        <a class="deep-purple lighten-1 waves-effect waves-light btn-floating" href="/dreams/<%= dreamlist[i].dreamId %>/delete"><i class="material-icons">delete</i></a>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>

        <!-- MODAL BUTTON -->
        <div class="section" id="controls">
            <a class="deep-purple accent-1
            waves-effect waves-light btn-floating left modal-trigger" href="#add">
                <i class="material-icons center">add</i>
            </a>
        </div>

        <!-- EDIT MODAL -->
        <div class="modal" id="add">
            <div class="modal-content">
                <h3>Add Dream:</h3>
                <form id="addForm" method="post" action="/dreams">
                    <div class="row">
                        <div class="input-field col s8">
                            <input type="text" id="titleInput" name="title" class="validate" data-length="32" required value="<%= dreamlist.title %>"</input>
                            <label for="titleInput" style="color:rgb(140, 121, 176)">Title:</label>
                        </div>

                        <div class="input-field col s4">
                            <input type="date" id="dateInput" name="date" value="<%= dreamlist.dateFormatted %>"></input>
                            <label for="dateInput" style="color:rgb(140, 121, 176)">Date:</label>
                        </div>

                        <div class="input-field col s6">
                            <select type="number" id="typeInput" name="type" required>
                                <option value="" disabled > Choose Your Dream Type</option>
                                <option value="<%= dreamlist.typeId %>"   <% if (dreamlist.typeId == 1) { %> selected <% } %>> Normal Dream </option>
                                <option value=2   <% if (dreamlist.typeId == 2) { %> selected <% } %>> Lucid Dream </option>
                                <option value=3   <% if (dreamlist.typeId == 3) { %> selected <% } %>> Progressive Dream </option>
                                <option value=4   <% if (dreamlist.typeId == 4) { %> selected <% } %>> False-Awakening Dream </option>
                                <option value=5   <% if (dreamlist.typeId == 5) { %> selected <% } %>> Daydream </option>
                                <option value=6   <% if (dreamlist.typeId == 6) { %> selected <% } %>> Vivid Dream </option>
                                <option value=7   <% if (dreamlist.typeId == 7) { %> selected <% } %>> Recurring Dream </option>
                                <option value=8   <% if (dreamlist.typeId == 8) { %> selected <% } %>> Prophetic Dream </option>
                                <option value=9   <% if (dreamlist.typeId == 9) { %> selected <% } %>> Nightmare </option>
                              </select>
                              <label for="typeInput" style="color:rgb(140, 121, 176)">Type:</label>
                        </div>
                        
                        <div class="input-field col s12">
                            <textarea class="materialize-textarea" id="descriptionInput" name="description" value="<% dreamlist.description %>"></textarea>
                            <label for="descriptionInput" style="color:rgb(140, 121, 176)">Description:</label>
                        </div>
                    </div>
                    <!-- MODAL FOOTER -->
                    <div class="modal-footer">
                        <!-- SUBMIT BUTTON FORM ATTRIBUTE -->
                        <button class="light-green lighten-2 btn waves-effect waves-light" type="submit">
                            <i class="material-icons">check</i>
                        </button>
                        <button class="modal-close waves-effect waves-green btn-flat"><i class="material-icons">close</i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>

     <!-- Materialize JavaScript -->
     <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

     <script src="/scripts/materializeAutoInit.js"></script>

</body>

</html>