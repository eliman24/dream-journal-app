<!-- Basic skeleton generated by Emmet Abbreviation "!" in VS Code -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dream</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

     <!-- Materialize JavaScript -->
     <script src="javascripts/materialize.min.js"></script>

     <!-- Auto-initialize Materialize elements-->
     <script src="/scripts/materializeAutoInit.js"></script>

    <!-- Stylesheet-->
     <link rel="stylesheet" href="/stylesheets/dreamStyle.css">

</head>

<body class="deep-purple lighten-5">

    <!-- Nav bar -->
    <header>
        <nav>
            <div class="nav-wrapper deep-purple lighten-3">
                <a href="/" class="brand-logo center"><i class="material-icons left">cloud_circle</i>Your Dreams<i class="material-icons right">cloud_circle</i></a> <!-- cap icon appears next to nav bar-->
                <a href="/" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul class="right">
                    <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
                    <li><a href="/dreams"><i class="material-icons left">cloud</i> Journal</a></li>
                </ul>
            </div>
        </nav>
    </header>
    
    <!-- Actual page content! -->
    <div class="container">
        <div class="section flow-text" id="details">
            <h1><%= dream.title %></h1>
            <p style="color:rgb(163, 121, 215)">
                You can include things like where you were, who you were with, the atmosphere and weather, how you felt, and how you feel after waking up.
            </p>
            <table>
                <tr>
                    <th>Date:</th>
                    <td><%= dream.dateFormatted %></td>
                </tr>
                <tr>
                    <th>Type:</th>
                    <td><%= dream.typeName %></td>
                </tr>
                <tr>
                    <th>Description:</th>
                    <td><%= dream.description %></td>
            </table>
        </div>

        <!-- MODAL BUTTON-->
        <div class="section" id="controls">
            <a class="deep-purple lighten-2 waves-effect waves-light btn-large left modal-trigger" href="#edit">
                <i class="material-icons center">edit</i>
            </a>
            <a class="deep-purple lighten-2 waves-effect waves-light btn-large right" href="/dreams/<%= dream.dreamId %>/delete">
                <i class="material-icons center">delete</i>
            </a>
        </div>

        <!-- EDIT MODAL -->
        <div class="modal" id="edit">
            <div class="modal-content">
                <h3>Edit Dream:</h3>
                <form id="updateForm" method="post" action="/dreams/<%= dream.dreamId %>"> <!-- default action is the page's URL -->
                    <div class="row">
                        <div class="input-field col s8">
                            <input type="text" id="titleInput" name="title" class="validate" data-length="32" required value="<%= dream.title %>"</input>
                            <label for="titleInput" style="color:rgb(140, 121, 176)">Title:</label>
                        </div>

                        <div class="input-field col s4">
                            <input type="date" id="dateInput" name="date" value="<%= dream.dateFormatted %>"></input>
                            <label for="dateInput" style="color:rgb(140, 121, 176)">Date:</label>
                        </div>

                        <div class="input-field col s6">
                            <select type="number" id="typeInput" name="type" required>
                                <option value="" disabled> Choose Your Dream Type</option> value="<%= dream.typeId %>"   <% if (dream.typeId == 1) { %> selected <% } %>> Normal Dream </option>
                                <option value=2   <% if (dream.typeId == 2) { %> selected <% } %>> Lucid Dream </option>
                                <option value=3   <% if (dream.typeId == 3) { %> selected <% } %>> Progressive Dream </option>
                                <option value=4   <% if (dream.typeId == 4) { %> selected <% } %>> False-Awakening Dream </option>
                                <option value=5   <% if (dream.typeId == 5) { %> selected <% } %>> Daydream </option>
                                <option value=6   <% if (dream.typeId == 6) { %> selected <% } %>> Vivid Dream </option>
                                <option value=7   <% if (dream.typeId == 7) { %> selected <% } %>> Recurring Dream </option>
                                <option value=8   <% if (dream.typeId == 8) { %> selected <% } %>> Prophetic Dream </option>
                                <option value=9   <% if (dream.typeId == 9) { %> selected <% } %>> Nightmare </option>
                              </select>
                              <label for="typeInput" style="color:rgb(140, 121, 176)">Type:</label>
                        </div>
                        
                        <div class="input-field col s12">
                            <textarea class="materialize-textarea" id="descriptionInput" name="description"><%= dream.description %></textarea>
                            <label for="descriptionInput" style=" color:rgb(140, 121, 176)">Description:</label>
                        </div>
                    </div>
                </form>
                <!-- MODAL FOOTER -->
                <div class="modal-footer">
                    <!-- Since the submit button is not within the form, it must have the form attribute specified-->
                    <button class="light-green lighten-2 btn waves-effect waves-light" type="submit" form="updateForm">
                        <i class="material-icons">check</i>
                    </button>
                    <button class="modal-close waves-effect waves-green btn-flat"><i class="material-icons">close</i></button>
                </div>
            </div>
        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script src="/scripts/materializeAutoInit.js"></script>

</body>

</html>